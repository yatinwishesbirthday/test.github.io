<%-include("partials/header");-%>

<main>
    <section class="container-fluid glass">
       <div class="signup-div">
           <img src="images/hi.png" alt="">
           <h3>Welcome</h3>
           <%if(err){%>
            <div class="alert alert-warning alert-dismissible fade show my-alert" role="alert">
                <strong>Error!</strong> <%= err %>
                <button type="button" class="btn btn-close btn-warning" data-bs-dismiss="alert" aria-label="Close"></button>
              </div>
         <%}%>
            <form class="signup-form" action="/signup" method="POST">
                <input
                    class="signup-form-text"
                    type="email"
                    autocomplete="off"
                    name="email"
                    placeholder="Email"
                    value = "<%= email %>"
                />
                <input
                    class="signup-form-text"
                    type="password"
                    name="password"
                    placeholder="Password"
                />
                <input
                    class="signup-form-text"
                    type="password"
                    name="confirmPassword"
                    placeholder="Confirm Password"
                />
                 <div class="signup-btns">
                    <div class="google">
                        <a class="btn btn-outline btn-lg circle-btn" href="/google" role="button">
                            <i class="fab fa-google"></i>
                        </a>
                        <p>Signin with <br> Google</p>
                     </div>
                     <div class="next">
                        <button class="btn btn-outline btn-lg circle-btn" type="submit">
                            <i class="fas fa-arrow-right"></i>
                       </button>
                       <p>Continue <br> Signin</p>
                     </div>
                    
                 </div>
                
            </form>
           
       </div>
    </section>
</main>
<div class="circle c1"></div>
<div class="circle c2"></div>
<div class="circle c3"></div>
<div class="circle c4"></div>
<div class="circle c5"></div>


<script
    src="https://cdn.jsdelivr.net/npm/bootstrap@5.0.0-beta2/dist/js/bootstrap.bundle.min.js"
    integrity="sha384-b5kHyXgcpbZJO/tY9Ul7kGkf1S0CWuKcCD38l8YkeH8z8QjE0GmW1gYU5S9FOnJ0"
    crossorigin="anonymous"
></script>
</body>
</html>
